{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <details style="background-color: #e2e2e2; padding: 6px; border-radius: 6px" class="filters accordion">
            <summary>Filtres</summary>
            {{ form_start(filterForm) }}
            <div>
                {{ form_row(filterForm.campus) }}
            </div>
            <div>
                {{ form_row(filterForm.name) }}
            </div>
            <div>
                {{ form_row(filterForm.start) }}
                {{ form_row(filterForm.end) }}
            </div>
            <div>
                {{ form_row(filterForm.state) }}
            </div>

            <div class="checkboxes">
                {{ form_row(filterForm.isOrganizer) }}
                {{ form_row(filterForm.isRegistered) }}
                {{ form_row(filterForm.isNotRegistered) }}
                {{ form_row(filterForm.isPast) }}
            </div>

            <input type="submit" value="Rechercher">

            {{ form_end(filterForm) }}
        </details>

        <h2>Résultats des sorties filtrées</h2>

        <table class="striped">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Date de début</th>
                <th>Date limite d'inscription</th>
                <th>nombre de participants</th>
                <th>Campus</th>
                <th>État</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% if hangouts is empty %}
                <tr>
                    <td colspan="5">Aucune sortie trouvée.</td>
                </tr>
            {% else %}
                {% for hangout in hangouts %}

            <tr>
                <td>{{ hangout.name }}</td>
                <td>{{ hangout.startingDateTime|date('d/m/Y H:i') }}</td>
                <td>{{ hangout.lastSubmitDate|date('d/m/Y H:i') }}</td>
                <td>{{ hangout.subscriberLst|length }} / {{ hangout.maxParticipant }}</td>
                <td>{{ hangout.campus.name }}</td>
                <td>{{ hangout.state.label }}</td>
                <td> {% if app.user in hangout.subscriberLst %}
                    X
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('user_detail', {'id': hangout.organizer.id}) }}">{{ hangout.organizer.username }}</a>
                </td>
                <td>
                    <a href="{{ path('hangout_subscribe', {'id': hangout.id}) }}" class="contrast no-underline">S'inscrire</a><br>
                    <a href="{{ path('hangout_unsubscribe', {'id': hangout.id}) }}" class="contrast no-underline">Se désister</a>
                    <a href="{{ path('hangout_detail', {'id': hangout.id}) }}" class="contrast no-underline">Afficher</a>
                    {% if app.user.id ==  hangout.organizer.id %}
                        <a href="{{ path('hangout_modify', {'id': hangout.id}) }}" class="contrast no-underline">Modifier</a>
                        <a href="{{ path('hangout_cancel', {'id': hangout.id}) }}" class="contrast no-underline">Annuler</a>
                    {% endif %}
                </td>
            </tr>

                {% endfor %}
            {% endif %}
            </tbody>
        </table>

        <div>

            <a class="no-underline" href="{{ path('hangout_add') }}"><button class="contrast">Créer une sortie</button></a>

        </div>

    </div>
{% endblock %}
